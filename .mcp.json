{
  "mcpServers": {
    "mcp-nova": {
      "command": "nova-memory-mcp"
    },
    "gemini-cli": {
      "command": "npx",
      "args": ["-y", "gemini-mcp-tool"]
    },
    "playwright": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--network=host",
        "mcp/playwright"
      ]
    },
    "perplexity-ask": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "PERPLEXITY_API_KEY",
        "mcp/perplexity-ask"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "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"
      }
    }
  }
}
